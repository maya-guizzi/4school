      </svg><i class="bi bi-person-circle px-1"></i>
    <!-- input -->
    <input class="lgalign"
    type="username"
     name="username"
     placeholder="Name">
</div>
    <!-- sign in  -->
    <div class="lglogindiv2">
    <button type="submit">Sign in</button>
</div>
<img src="/images/image2.jpg" alt="" class="img-fluid imgpos" style="width: 600px ; height: 350px;">
