<body class="bck">

    <h1 class="title">4school</h1> 

    <% if(user){ %>
      <h1>Logged in as <%= user.username%></h1>
   <% } else{ %>
      <h1>Not logged in</h1>
    <% } %>
    <marquee behavior="" direction=""  class="title" ></marquee>
    <div class="row">

        <div class="col-md-3 text">
          <h2>FILTERS</h2>
          <h4>Subjects</h4>
          <button type="button" class="btn btn-outline-light px">italian</button>
          <button type="button" class="btn btn-outline-light px">english</button>
          <button type="button" class="btn btn-outline-light px">history</button>
          <button type="button" class="btn btn-outline-light px">business</button>
          <button type="button" class="btn btn-outline-light px">science</button>
          <button type="button" class="btn btn-outline-light px">math</button>
          <button type="button" class="btn btn-outline-light px">PHE</button>
          <button type="button" class="btn btn-outline-light px">computer science</button>
          <button type="button" class="btn btn-outline-light px">design</button>

          <h4>Class</h4>
          <button type="button" class="btn btn-outline-light px">MYP1</button>
          <button type="button" class="btn btn-outline-light px">MYP2</button>
          <button type="button" class="btn btn-outline-light px">MYP3</button>
          <button type="button" class="btn btn-outline-light px">MYP4</button>
          <button type="button" class="btn btn-outline-light px">MYP5</button>
          <button type="button" class="btn btn-outline-light px">DP1</button>
          <button type="button" class="btn btn-outline-light px">DP2</button>
         
         
        </div>

        <div class="col-md-6 text1 ">

    <a href="/notes/create">create notes</a>
            <% notes.forEach( (note) => { %>
                <div class ="box sb1">
                  <h2><%= note.title %> </h3>
                  <img src="<%= note.image %>" alt="">
                  <h4><%- notes.caption %> </h4>
                  <h4><%- notes.subject %> </h4>
                  <h4><%- notes.class %> </h4>
                  <a href="/notes/<%= note._id %>">open notes</a>
                </div>
              <% }); %>
        </div>
        <div class="col-md-2 text">my account

        <div class="col-md-6 text1 ">body</div>
