          <a href="/classes/DP2" class="btn btn-outline-light px">DP2</a>
         
         
        </div>

        <div class="col-md-6 text1 " style="height: 80vh;
        overflow: auto;">
          <div class="container">
            <div class="tabbar tab-style2">
              <ul class="flex-center">
                <li class="home active" data-where="home"><span class="material-icons-outlined">
                    home
                  </span></li>
                <li class="products" data-where="products"><span class="material-icons-outlined">
                    shopping_bag
                  </span></li>
                <li class="services" data-where="services"><span class="material-icons-outlined">
                    plumbing
                  </span></li>
                <li class="about" data-where="about"><span class="material-icons-outlined">
                    business
                  </span></li>
                <li class="help" data-where="help"><span class="material-icons-outlined">
                    help_outline
                  </span></li>
              </ul>
            </div>
          </div>
        
          <div class="container">
            <div class="tabbar tab-style1">
              <ul class="flex-center">
                <li class="home active" data-where="home"><span class="material-icons-outlined">
                    home
                  </span></li>
                <li class="products" data-where="products"><span class="material-icons-outlined">
                    shopping_bag
                  </span></li>
                <li class="services" data-where="services"><span class="material-icons-outlined">
                    plumbing
                  </span></li>
                <li class="about" data-where="about"><span class="material-icons-outlined">
                    business
                  </span></li>
                <li class="help" data-where="help"><span class="material-icons-outlined">
                    help_outline
                  </span></li>
                <li class="follow">&nbsp;</li>
              </ul>
            </div>
          </div>
            <% if (filter) {%> 
              <h1>Filtered by <%= filter.natypeme %> : <%= filter.value %> </h1>
              <a href="/">Reset</a>
            <% } %> 
            <a href="/notes/create">create notes</a>
            <% notes.forEach( (note) => { %>
                <div class ="box sb1">
                  <h2><%= note.title %> </h3>
                  <img src="<%= note.image %>" alt="">
                  <h4><%- notes.caption %> </h4>
                  <h4><%- notes.subject %> </h4>
                  <h4><%- notes.class %> </h4>
                  <a href="/notes/<%= note._id %>">open notes</a>
                </div>
              <% }); %>
        </div>
        <div class="col-md-2 text" style="height: 80vh;
        overflow: auto;">my account

        <div class="col-md-6 text1 ">body</div>
        <div class="col-md-2 text">My Account:

            <a href="/login">login</a>
        </div>
        <a href="/logout">logout</a>
        <div>
          <a href="/profile">Your Profile</a>



</body>
</html>

