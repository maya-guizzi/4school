<body class="bck">

    <h1 class="title">4school</h1> 

    <% if(user){ %>
      <h1>Logged in as <%= user.username%></h1>
   <% } else{ %>
      <h1>Not logged in</h1>
    <% } %>
    <marquee behavior="" direction=""  class="title" ></marquee>
    <div class="row">

        <div class="col-md-3 text" style="height: 80vh;
        overflow: auto;">
          <h2>FILTERS</h2>
