<!-- navbar -->
<body class="bck px-3 over">
  <div class="row">
    <div class="col-3 px-4"> <h1 class="lgtitle">4school</h1></div>
    <div class="col-2 mt-2"><a href="/" class="lgbody homebtn "> Homepage</a></div>
    <div class="col-2 mt-2"><a href="/profile" class="lgbody homebtn1 "> Profile </a></div>
    <div class="col-2 mt-2"><a href="/logout" class="lgbody homebtn2 "> Logout</a></div>
    <div class="col-2 mt-2"><a href="/login" class="lgbody homebtn3 "> Login</a></div>
<hr>
    <div class="row">
      <!-- forum -->
      <div class="col-9">
         <div class="lgbody" >
            <% if (filter) {%> 
              <h1>Filtered by <%= filter.type %> : <%= filter.value %> </h1>
              <a href="/">Reset</a>
            <% } %> 
            <a class="btn btn-outline-dark" href="/notes/create">create notes</a>
            <% notes.forEach( (note) => { %>
                <div class ="box sb1">
                  <h2><%= note.title %> </h3>
                  <img src="<%= note.image %>" alt="">
                  <h4><%- notes.caption %> </h4>
                  <h4><%- notes.subject %> </h4>
                  <h4><%- notes.class %> </h4>
                  <a class="btn btn-outline-light" href="/notes/<%= note._id %>">open notes</a>
                </div>
              <% }); %>   
             </div>
      </div>
      <!-- filters -->
      <div class="col-3 filterdiv">
          <div class="row ">
            <h1 class="lgtitle2 mt-3">Filters</h2>
              <hr style="color: white;">
            <h1 class="lgtitle1">Subjects</h4>

            <div class="col-3 filters">
              <a href="/subjects/italian" class="btn btn-outline-light px mt-2">italian</a>
              <a href="/subjects/english" class="btn btn-outline-light px mt-2">english</a>
              <a href="/subjects/history" class="btn btn-outline-light px mt-2">history</a>
            </div>

            <div class="col-3 filters">
              <a href="/subjects/business" class="btn btn-outline-light px mt-2">business</a>
              <a href="/subjects/science" class="btn btn-outline-light px mt-2">science</a>
              <a href="/subjects/math" class="btn btn-outline-light px mt-2">math</a>
            </div>

            <div class="col-3 filters">
              <a href="/subjects/PHE" class="btn btn-outline-light px  mt-2">PHE</a>
              <a href="/subjects/computer science" class="btn btn-outline-light px mt-2">cs</a>
              <a href="/subjects/design" class="btn btn-outline-light px mt-2">design</a>
            </div>
          </div>
          
          

          <h4>Class</h4>
        <div class="row">
          <a href="/classes/MYP1" class="btn btn-outline-light px mt-2">MYP1</a>
          <a href="/classes/MYP2" class="btn btn-outline-light px mt-2">MYP2</a>
          <a href="/classes/MYP3" class="btn btn-outline-light px mt-2">MYP3</a>
          
          <a href="/classes/MYP4" class="btn btn-outline-light px mt-2">MYP4</a>
          <a href="/classes/MYP5" class="btn btn-outline-light px mt-2">MYP5</a>
          <a href="/classes/DP1" class="btn btn-outline-light px mt-2">DP1</a>
          <a href="/classes/DP2" class="btn btn-outline-light px mt-2">DP2</a>
          <div class="col-3 filters">
         </div>
         </div>
        </div>

      </div>
